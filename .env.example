# MongoDB connection URI
# Example for local: mongodb://127.0.0.1:27017/nepgov
# Example for cloud: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=

# JWT secrets for authentication
JWT_ACCESS_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_secret

# Email configuration for sending emails
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_specific_password

# Redis configuration for caching/session management
REDIS_HOST=your_redis_host
REDIS_PORT=your_redis_port
REDIS_PASS=your_redis_password

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_ADMIN=http://localhost:3001

# Cloudinary configuration for image/file storage
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret